# H. SSH
alias sshv='ssh -v'
alias sscp='scp -r'

# I. Networking
alias ip='ip --color=auto'

# J. Miscellaneous
alias cpu='watch -n 1 "sensors | grep Package | awk '"'"'{print $4}'"'"'"'
alias mem='free -h'

# K. Docker
alias dc='docker-compose'
alias dbuild='docker-compose build'
alias dup='docker-compose up'
alias ddown='docker-compose down'

# L. Python
alias py='python'
alias py3='python3'
alias pip='pip3'

# P. File Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# R. Restart the shell
alias restart='exec "${SHELL}"'

# S. FZF Settings
export FZF_DEFAULT_OPTS="--height 50% --layout=reverse --preview '(bat --style=numbers --color=always {} || cat {}) 2> /dev/null | head -500'"

# T. Functions
ft() {
    # Open a file using the default application.
    xdg-open "$1" &>/dev/null
}

# U. Cloud and Servers
alias d='docker'
alias dcr='docker run'
alias dk='docker ps -a'
alias dps='docker ps'

# W. Environment Variables (Local)
export PATH="$PATH:$HOME/go/bin"

# Finalizing
[ -f /etc/bash_completion ] && . /etc/bash_completion
